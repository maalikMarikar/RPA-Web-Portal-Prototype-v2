                <input name="f4" class="text-sm text-white max-w-16 rounded border border-2 border-blue-600 outline-none focus:ring-2 focus:border-blue-600 bg-gray-600 transition">
                <input name="f5" class="text-sm text-white max-w-16 rounded border border-2 border-blue-600 outline-none focus:ring-2 focus:border-blue-600 bg-gray-600 transition">
            </div>



            <div class="flex flex-col">
                <p class="text-center">Branch Inputter Remarks:</p>
                <input type="text" id="fin_amnt" name="" class="p-1 text-black rounded-lg bg-gray-600 border border-2 border-blue-500 focus:border-blue-500 focus:ring-2 focus:ring-blue-500 outline-none transition">
            </div>


        </div>


        <!-- Button Below -->
        <div class="flex justify-center items-center space-x-2">
            <button type="submit" class="w-full max-w-20 bg-blue-500 p-2 rounded">Save</button>
            <button type="reset" class="w-full max-w-32 bg-blue-500 p-2 rounded">Clear Form</button>
        </div>






